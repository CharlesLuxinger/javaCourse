package course;

import java.util.Scanner;

public class ProgramGetString {

	public static void main(String[] args) {

		//
		Scanner sc = new Scanner(System.in);

		String text = sc.nextLine();

		System.out.println(text.toLowerCase());
		System.out.println(text.toUpperCase());
		System.out.println(text.replace('s', 'b'));
		System.out.println(text.replace("te", "be"));
		System.out.println(text.trim());
		System.out.println(text.substring(1));
		System.out.println(text.substring(0, 2));
		System.out.println(text.indexOf('f'));
		System.out.println(text.lastIndexOf("asb"));

		// "maçã;banana;uva"
		text = sc.nextLine();
		String[] vect = text.split(";");
		System.out.println(vect[0]);
		System.out.println(vect[1]);
		System.out.println(vect[2]);

		sc.close();
	}

}
