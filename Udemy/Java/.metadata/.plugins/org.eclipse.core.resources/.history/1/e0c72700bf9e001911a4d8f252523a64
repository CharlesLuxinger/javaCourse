package applicantion;

import entities.Account;
import entities.BusinessAccount;
import entities.SavingAccount;

public class Program {

	public static void main(String[] args) {
			/*Classes abstratas
				• São classes que não podem ser instanciadas
				• É uma forma de garantir herança total: somente subclasses não
				abstratas podem ser instanciadas, mas nunca a superclasse abstrata
				
			  Notação UML: Classe em Itálico
			*/
		
		Account acc1 = new Account(1001, "Alex", 1000.0);
		Account acc2 = new SavingAccount(1002, "Manuel", 1000.0, 0.01);
		Account acc3 = new BusinessAccount(1003, "João", 1000.0, 500.0);
		
		acc1.withDraw(50.0);
		acc2.withDraw(50.0);
	}

}
