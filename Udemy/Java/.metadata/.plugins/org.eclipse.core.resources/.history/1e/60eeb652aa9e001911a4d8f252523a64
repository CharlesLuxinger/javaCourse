package entities;

public final class SavingsAccountPlus extends Account {
	
	private Double interestRate;

	public SavingsAccountPlus() {
		super();
	}

	public SavingsAccountPlus(Integer number, String holder, Double balance, Double interestRate) {
		super(number, holder, balance);
		this.interestRate = interestRate;
	}

	public Double getInterestRate() {
		return interestRate;
	}

	public void setInterestRate(Double interestRate) {
		this.interestRate = interestRate;
	}
	
	public void updateBalance() {
		super.deposit(super.getBalance() * interestRate);
	}
	
	@Override
	public void withDraw(double amount) {
		balance -= amount;
	}

}
