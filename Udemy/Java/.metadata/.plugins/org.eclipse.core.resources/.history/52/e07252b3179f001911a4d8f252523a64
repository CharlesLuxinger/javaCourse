package entities;

public class PessoaFisica extends Pessoa {
	private Double gastoSaude;

	public PessoaFisica(String name, Double rendaAnual, Double rendaAnual2) {
		super(name, rendaAnual);
		rendaAnual = rendaAnual2;
	}

	public Double getRendaAnual() {
		return gastoSaude;
	}

	public void setRendaAnual(Double rendaAnual) {
		this.gastoSaude = rendaAnual;
	}

	@Override
	public final double calcImpostos() {
		if (super.anualIcome < 20000.0) {
			if (this.gastoSaude != 0) {
				return (super.anualIcome * 0.15) - (gastoSaude * 0.5);
			}
			return (super.anualIcome * 0.15);

		} else if (this.gastoSaude != 0) {
			return (super.anualIcome * 0.25) - (gastoSaude * 0.5);
		}
		return (super.anualIcome * 0.25);

	}
}
